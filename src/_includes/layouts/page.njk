---
layout: layouts/base.njk
---

<div class="container mx-auto grid grid-cols-8 gap-4 min-h-100vh px-3 md:px-0">

  <!-- Left banner -->
  <div class="hidden xl:block col-start-1 col-span-1 relative">
    <a class="absolute inset-0 py-16 px-4" href="/banner">
      <span role="img" class="text-5xl">ðŸš¨</span>
      <h1 class="text-5xl font-black text-[red] -skew-y-6 leading-none">Big sales!</h1>
      <h2 class="mt-8 text-xl font-medium text-gray-700 -skew-y-6">Check out our hottest stuff for killer prices!</h2>
    </a>
  </div>

  <!-- Right banner -->
  <div class="hidden xl:block col-span-1 col-start-8 relative">
    <a class="absolute inset-0 py-16 px-4" href="/banner">
      <h1 class="text-5xl font-black text-[red] leading-none">Our best sellers</h1>
      <h2 class="mt-8 text-xl font-medium text-gray-700">Our best selling products of all
        time.</h2>
    </a>
  </div>

  <div class="grid gap-4 md:gap-8 col-span-8 lg:col-span-6 col-start-1 lg:col-start-2 row-start-1
    grid-rows-[80px_1fr] md:grid-rows-[100px_1fr]">
    <!-- Header -->
    <div class="grid grid-cols-5 gap-4 justify-between py-4 md:py-8 border-b-4 border-blue-600">
      <div class="relative flex items-center col-start-1 col-span-2 md:col-span-1 gap-4">
        <a href="/" class="text-xl md:text-2xl font-black text-blue-700 -skew-y-6 translate-x-1">All-Shop</a>
        <button class="md:hidden"><img src="/images/icons/menu.svg" class="inline-block w-[24px]"></button>
      </div>

      <form action="" class="hidden md:flex items-center col-start-2 col-span-3 w-full relative">
        <input type="text" placeholder="Type what are you looking for" class="h-[32px] w-full
          outline-none focus:bg-gray-100 rounded-full px-3 pr-10" />
        <button class="absolute right-3"><img src="/images/icons/search.svg" class="inline-block w-[24px]"></button>
      </form>

      <div class="flex items-center gap-2 col-start-4 md:col-start-5 col-span-2 md:col-span-1 justify-end">
        <button class="md:hidden"><img src="/images/icons/search.svg" class="inline-block w-[24px]"></button>
        <a href="#"><img src="/images/icons/balance.svg" class="inline-block w-[24px]"></a>
        <a href="#"><img src="/images/icons/favorite.svg" class="inline-block w-[24px]"></a>
        <div id="cart" class="flex items-center">
          <img src="/images/icons/shopping_bag.svg" class="inline-block w-[24px]">
          Cart
          <span id="cartCount" class="rounded-full bg-blue-700 text-white font-medium text-xs hidden
            w-4 h-4 justify-center items-center"></span>
        </div>
        <!-- Cart content -->
        <div id="cart-content" class="hidden absolute shadow-gray-600 shadow-lg py-8 px-6 bg-white">
          <div>Cart is empty</div>
        </div>
      </div>
    </div>

    <div class="grid grid-cols-5 gap-4">
      <div class="gap-4 md:gap-6 lg:gap-8 col-start-1 col-span-5 md:col-start-2 md:col-span-4">
        {{ content|safe }}

        <!-- Footer -->
        <div class="py-4">
          <div class="text-gray-400 text-xs">
            All rights reserved &copy;2023.
          </div>
        </div>
      </div>

      <div class="hidden md:block md:col-start-1 md:col-span-1 row-start-1">
        <h3 class="border-b-2 border-blue-600 py-2">Menu</h3>
        <ul>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">Phones</a></li>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">Computers</a></li>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">Accessories</a></li>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">Cables</a></li>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">Software</a></li>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">TV &amp; audio</a></li>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">Kitchen appliances</a></li>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">Vacuum cleaners</a></li>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">Hair dryers</a></li>
          <li class="py-1 hover:text-blue-800 focus-within:text-blue-800"><a href="#">Electric tools</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>
